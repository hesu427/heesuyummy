<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFAFA">

    <Button
        android:id="@+id/insertBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="#FFFAFA"
        android:text="♡등록♡"
        android:textColor="#CD5C5C"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="REGISTRATION"
        android:textSize="25dp"
        android:background="#FFFAFA"
        android:textColor="#CD5C5C"
        android:id="@+id/textView7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="45dp"
        android:text="Name"
        android:textColor="#FFA07A" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/address"
        android:layout_alignBottom="@+id/address"
        android:layout_alignParentStart="true"
        android:text="Address"
        android:textColor="#FFA07A" />

    <EditText
        android:id="@+id/address"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="72dp"
        android:layout_weight="1"
        android:textColor="#FFA07A" />

    <EditText
        android:id="@+id/name"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_weight="1"
        android:textColor="#FFA07A"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/address"
        android:layout_marginTop="86dp"
        android:layout_weight="1"
        android:textColor="#FFA07A" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phone"
        android:layout_alignBottom="@+id/phone"
        android:layout_alignParentStart="true"
        android:text="Phone"
        android:textColor="#FFA07A"/>

    <EditText
        android:id="@+id/server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginTop="66dp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_weight="1"
        android:textSize="18dp"
        android:background="#FFFAFA"
        android:textColor="#FFFAFA"></EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/server"
        android:layout_alignBottom="@+id/server"
        android:layout_alignParentStart="true"
        android:text="Server Address"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#FFFAFA"
        android:textColor="#FFFAFA"/>



</RelativeLayout>
